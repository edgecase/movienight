        %input{ :type => "radio" }
        i have a movie
    %br
    .field
      %label
        movie title
        %a{ :href => "#" }
          add another movie
    .half
      .field.movie
        %input{ :type => "text" }
        %a{ :href => "#" }
          remove
      .field.movie
