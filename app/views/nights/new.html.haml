        %a{ :href => "#" }
          remove
      .field.movie
        %input{ :type => "text" }
        %a{ :href => "#" }
          remove
  %fieldset#additional_info
    #drinks_and_snacks.half
      .field.radio.beer
        = form.check_box :bring_drinks
        %label
          should guests bring drinks?
      .field.radio.snacks
        = form.check_box :bring_snacks
        %label
          should guests bring snackage?
