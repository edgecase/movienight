- content_for :head do
  = javascript_include_tag 'new_night'

= error_messages_for :night

- form_for @night do |form|
  %fieldset#when_fields
    %legend
      %span
        when?
    .field.date
      %label date
      = form.text_field :doors_open_date, :rel => :date, :size => 10
    .field.time
      %label time
      = form.time_select :doors_open_time, :minute_step => 15
    %br.clear
  %fieldset
    %legend
      %span
        where?
    .mozilla_is_rubbish
    .field.radio
      %label
        %input#use_saved_location{ :type => "radio", :name => "location_source", :rel => "#saved_locations", :checked => "checked" }
