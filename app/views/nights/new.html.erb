<h1>New night</h1>

<% form_for(@night) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :curtain_time_at %><br />
    <%= f.text_field :curtain_time_at, :rel => 'date' %>
  </p>
  <p>
    <%= f.label :doors_open_at %><br />
    <%= f.text_field :doors_open_at, :rel => 'date' %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', nights_path %>
