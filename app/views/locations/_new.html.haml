#location_errors
= fields_for Location.new do |location|
  = hidden_field_tag "authenticity_token", form_authenticity_token
  .field
    = location.label :name, 'name (like "House" or "Basement")'
    = location.text_field :name
  .field
    = location.label :street, "street address"
    = location.text_field :street
  .field
    = location.label :city, "city"
    = location.text_field :city
  .field
    = location.label :state, "state"
    = location.text_field :state, :size => 3
  .submit
    = link_to "save location", '#', :id => "add_location"
    = link_to "cancel", '#', :id => "cancel_new_location"
